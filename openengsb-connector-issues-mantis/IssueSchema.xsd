<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:man="http://futureware.biz/mantisconnect"
	targetNamespace="http://common.issues.openengsb.org/pojos" xmlns:tns="http://common.issues.openengsb.org/pojos">
	
	<xsd:import namespace="http://futureware.biz/mantisconnect" schemaLocation="./mantisSchema.xsd"/>
	
	<xsd:element name="issue_update_message">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="account_data" type="tns:AccountDataType" />
				<xsd:element name="issue_id" type="xsd:int"/>
				<xsd:element name="issue_data" type="tns:IssueDataType" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="issue_delete_message">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="account_data" type="tns:AccountDataType" />
				<xsd:element name="issue_id" type="xsd:int"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="issue_get_message">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="account_data" type="tns:AccountDataType" />
				<xsd:element name="issue_id" type="xsd:int"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:element name="issue_create_message">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="account_data" type="tns:AccountDataType" />
				<xsd:element name="issue_data" type="tns:IssueDataType" />
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	<xsd:complexType name="AccountDataType">
		<xsd:sequence>
			<xsd:element name="username" type="xsd:string" />
			<xsd:element name="password" type="xsd:string" />
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="IssueDataType">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:integer" minOccurs="0" />
			<xsd:element name="last_updated" type="xsd:dateTime"
				minOccurs="0" />
			<xsd:element name="project" type="man:ObjectRef"
				minOccurs="0" />
			<xsd:element name="priority" type="man:ObjectRef"
				minOccurs="0" />
			<xsd:element name="severity" type="man:ObjectRef"
				minOccurs="0" />
			<xsd:element name="status" type="man:ObjectRef"
				minOccurs="0" />
			<xsd:element name="reporter" type="man:AccountData"
				minOccurs="0" />
			<xsd:element name="summary" type="xsd:string" minOccurs="0" />
			<xsd:element name="version" type="xsd:string" minOccurs="0" />
			<xsd:element name="os" type="xsd:string" minOccurs="0" />
			<xsd:element name="date_submitted" type="xsd:dateTime"
				minOccurs="0" />
			<xsd:element name="handler" type="man:AccountData"
				minOccurs="0" />
			<xsd:element name="eta" type="man:ObjectRef" minOccurs="0" />
			<xsd:element name="resolution" type="man:ObjectRef"
				minOccurs="0" />
			<xsd:element name="description" type="xsd:string"
				minOccurs="0" />
			<xsd:element name="attachments" type="tns:AttachmentDataArray"
				minOccurs="0" />
			<xsd:element name="notes" type="tns:IssueNoteDataArray"
				minOccurs="0" />
			<xsd:element name="custom_fields" type="tns:CustomFieldValueForIssueDataArray"
				minOccurs="0" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="IssueNoteDataArray">
		<xsd:sequence>
			<xsd:element ref="man:IssueNoteData" minOccurs="0"
				maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="AttachmentDataArray">
		<xsd:sequence>
			<xsd:element ref="man:AttachmentData" minOccurs="0"
				maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	
	
	<xsd:complexType name="CustomFieldValueForIssueDataArray">
		<xsd:sequence>
			<xsd:element ref="man:CustomFieldValueForIssueData"
				minOccurs="0" maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>
	
</xsd:schema>