<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:sm="http://servicemix.apache.org/config/1.0"
  xmlns:engsb="http://openengsb.org/test/domain/issues/1.0"
  xmlns:test="urn:test"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:mockns="http://mockns.btmatthews.com/schema/mockito"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <sm:container id="jbi" embedded="true" createMBeanServer="false">
    <sm:activationSpecs>

      <sm:activationSpec>
        <sm:component>
          <engsb:testIssueComponent>
            <engsb:endpoints>
              <engsb:create-issue service="test:ticketCreatorService" endpoint="executeEndpoint">
                <property name="issueDomain" ref="mockedIssueDomain" />
              </engsb:create-issue>
            </engsb:endpoints>
          </engsb:testIssueComponent>
        </sm:component>
      </sm:activationSpec>

    </sm:activationSpecs>
  </sm:container>

  <mockns:mock id="mockedIssueDomain" object-class="org.openengsb.drools.IssueDomain" />

</beans>
